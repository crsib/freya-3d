function( AddPlugin TargetName )
	GET_PROPERTY ( SHARED_PLUGINS GLOBAL PROPERTY SHARED_PLUGINS_GLOBAL )
	GET_TARGET_PROPERTY( PLUGIN_LOCATION ${TargetName} LOCATION )
	SET( SHARED_PLUGINS ${SHARED_PLUGINS} "${PLUGIN_LOCATION}" )
	SET_PROPERTY( GLOBAL PROPERTY SHARED_PLUGINS_GLOBAL ${SHARED_PLUGINS})
endfunction( AddPlugin )

